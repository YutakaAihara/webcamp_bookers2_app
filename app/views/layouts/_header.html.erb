<header>
	<nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-1">
		<div class="container">
			<%= link_to "Bookers",  root_path, class: 'navbar-brand' %>
			<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expand="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarNavDropdown">
				<ul class="navbar-nav ml-auto">
					<% if user_signed_in? %>
					<li>
						<%= link_to " Home", user_path(current_user.id), class: 'fas fa-home nav-link text-light' %>
					</li>
					<li>
						<%= link_to " Users", users_path, class: 'fas fa-users nav-link text-light' %>
					<li>
						<%= link_to "Books", books_path, class: 'fas fa-book-open nav-link text-light' %>
					</li>
					<li>
						<%= link_to " logout", destroy_user_session_path, class: 'fas fa-sign-out-alt nav-link text-light', method: :delete %>
					</li>
					<% else %>
					<li>
						<%= link_to " Home", root_path, class: 'nav-link text-light fas fa-home' %>
					</li>
					<li>
						<%= link_to " About", about_path, class: 'nav-link text-light fas fa-link' %>
					</li>
					<li>
						<%= link_to " sign up", new_user_registration_path, class: 'nav-link text-light fas fa-user-plus' %>
					</li>
					<li>
						<%= link_to " login", new_user_session_path, class: 'nav-link text-light fas fa-sign-in-alt' %>
					</li>
					<% end %>
				</ul>
			</div>
		</div>
	</nav>
	<% if user_signed_in? %>
		<div class="search-form text-center">
			<%= form_with url: search_path, method: :get, local: true do |f| %>
				<%= f.text_field :keyword %>
				<%= f.select :table, [["User", "user_table"], ["Book", "book_table"]] %>
				<%= f.select :search_type, [["完全一致", "perfect"], ["前方一致", "forward"], ["後方一致", "rear"], ["部分一致", "partial"]] %>
				<%= f.submit " 検索\ " %>
			<% end %>
		</div>
	<% end %>
</header>