  <div class="col-md-8 offset-md-1">
    <h2>Books</h2>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% books.each do |book| %>
        <tr>
          <td><%= attachment_image_tag book.user, :image, size: "40x40", format: 'jpeg', fallback: "no_image.jpg" %></td>
          <td><%=link_to book_path(book), method: :get do %><%= book.title %><% end %></td>
          <td><%= book.body %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>