<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'books/sidebar', user: @user, book: @book %>

    <div class="col-md-8 offset-md-1">
      <h2 class="detail-heading">Book detail</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="5"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@user.id) do %>
                <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size: '50x50' %><br/>
                <%= @user.name %>
              <% end %>
            </td>
            <td><%=link_to book_path(@show_book) do %><%= @show_book.title %><% end %></td>
            <td><%= @show_book.body %></td>
            <td>
              <% if @show_book.favorited_by?(current_user) %>

                  <%= link_to book_favorites_path(@show_book), class:"like", method: :delete do %>
                    ♥<%= @show_book.favorites.count %>
                  <% end %>

                <% else %>

                  <%= link_to book_favorites_path(@show_book), class:"unlike", method: :post do %>
                    ♥<%= @show_book.favorites.count %>
                  <% end %>

              <% end %>
            </td>
            <td>
              コメント数 : <%= @show_book.book_comments.count %>
            </td>
            <% if @user.id == current_user.id %>
              <td><%= link_to "Edit", edit_book_path(@show_book), class:"btn btn-success btn-sm" %></td>
              <td><%= link_to "Destroy", book_path(@show_book), class:"btn btn-danger btn-sm", method: :delete, data: {confirm: "本当に消しますか？"} %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
      <div class="comments">
        <% @show_book.book_comments.each do |book_comment| %>
            <%= link_to user_path(book_comment.user.id) do %>
                <%= attachment_image_tag book_comment.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size: '50x50' %>
            <% end %>
            <%= book_comment.comment %>
            <% if book_comment.user == current_user %>
              <%= link_to "Destroy", book_book_comment_path(book_comment.book_id, book_comment.id), class:"btn btn-danger btn-sm", method: :delete, data: {confirm: "本当に消しますか？"} %><br>
            <% end %>
            <%= link_to user_path(book_comment.user.id) do %>
                <%= book_comment.user.name %>
            <% end %>
          </p>
        <% end %>
        </div>
        <div class="new-comment">
        <%= form_with(model:[@show_book, @book_comment], local: true) do |f| %>
          <%= f.text_area :comment,  size: "100x5"; %><br/>
          <%= f.submit "送信" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
