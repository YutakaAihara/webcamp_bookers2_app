<div class="container px-5 px-sm-0">
  <%= render "layouts/errors", object: @book %>
  <div class="row">
    <div class="col-md-3">
    <%= render "users/user_info", user: @user %>
    <h2 class="mt-3">New book</h2>
    <%= render "books/form", book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Group detail</h2>
      <%= link_to "グループを作成する", new_group_path %>
        |
      <%= link_to "グループ一覧", groups_path %>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>グループ名</th>
            <th>紹介文</th>
            <th>メンバー</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <%= attachment_image_tag @group, :image, :fill, 50, 50, fallback: "no_image.jpg", size: '50x50' %>
            </td>
            <td><%= @group.name %></td>
            <td><%= @group.introduction %></td>
            <td>
              <% @group.users.each do |user| %>
                <%= user.name %><br/>
              <% end %>
            </td>
              <% if current_user.id != @group.owner_id && ! @group.users.include?(current_user) %>
                <td>
                  <%= link_to "Join this group", group_group_users_path(@group), class: "btn btn-success", method: :post %>
                </td>
              <% elsif current_user.id != @group.owner_id && @group.users.include?(current_user) %>
                <td>
                  <%= link_to "Leave this group", group_group_user_path(@group), class: "btn btn-danger", method: :delete %>
                </td>
              <% end %>
          </tr>
        </tbody>
      </table>


    </div>

  </div>
</div>