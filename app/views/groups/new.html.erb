<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px px-sm-0 mx-auto">
      <h2>Create Group</h2>
      <%= render "layouts/errors", object: @group %>
      <%= form_with model:@group, local:true do |f| %>
        <div class="form-group">
          <%= f.label :name, 'グループ名', class: "group_name" %>
          <%= f.text_field :name, class: "edit-user-text form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :introduction, 'Introduction', class: "group_introduction" %>
          <%= f.text_area :introduction, class: "edit-user-text form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :image, 'グループ画像', class: "inputImage" %>
          <%= f.attachment_field :image, class: "form-control-file profile_image" %>
        </div>
        <div class="form-group">
          <%= f.submit 'Create Group', class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>